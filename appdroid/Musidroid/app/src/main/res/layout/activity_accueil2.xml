<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musidroid.Accueil2"
    android:id="@+id/Accueil2Layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="95"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonNewPart"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:fontFamily="@font/gloria_hallelujah"
            android:onClick="instrumentChooseView"
            android:text="@string/nouvelle_partition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/ButtonChargerPart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:fontFamily="@font/gloria_hallelujah"
            android:onClick="onClickCharger"
            android:text="@string/charger_une_ancienne_partition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/gloria_hallelujah"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Quitter"
        android:onClick="onQuitter"/>


</LinearLayout>
