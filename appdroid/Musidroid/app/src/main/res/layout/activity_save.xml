<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musidroid.SaveActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/buttonNextPartThree"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/gloria_hallelujah"
            android:onClick="onClickSavePart"
            android:text=">>"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textSavePartition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gloria_hallelujah"
            android:gravity="start"
            android:paddingTop="5dp"
            android:paddingStart="@dimen/fab_margin"
            android:paddingEnd="@dimen/fab_margin"
            android:text="Save Partition"
            android:textSize="15sp"

            android:shadowColor="@color/colorLightBlack"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/textNameIt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:text="Name it !"
            android:textSize="40sp"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="@color/colorLightBlack"

            android:layout_marginTop="-10sp"/>

        <TextView

            android:id="@+id/textCompliment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNameIt"

            android:text="Bravo l'artiste =)"
            android:gravity="center_horizontal"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="@color/colorLightBlack"
            android:textSize="15sp"
            android:textStyle="bold"

            android:layout_marginTop="-20dp"
            android:layout_marginBottom="30dp"

            android:layout_alignEnd="@+id/textNameIt"/>


        <Button
            android:id="@+id/buttonBackPartThree"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/back"
            android:fontFamily="@font/gloria_hallelujah"
            android:textSize="15sp"
            android:onClick="onClickAbord"/>

        <EditText
            android:id="@+id/namePartitionEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="Name"
            android:ems="10"
            android:fontFamily="@font/gloria_hallelujah"
            android:inputType="text|textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorLightBlack"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>
