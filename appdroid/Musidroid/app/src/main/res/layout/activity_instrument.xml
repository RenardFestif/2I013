<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instrumentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    tools:context="com.musidroid.InstrumentActivity">


    <TextView
        android:id="@+id/textAddPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="start"
        android:paddingEnd="@dimen/fab_margin"
        android:paddingStart="@dimen/fab_margin"
        android:paddingTop="5dp"
        android:shadowColor="@color/colorLightBlack"
        android:shadowDx="5"

        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Add Part"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textPartOne"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="-10sp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Part One"
        android:textColor="@color/colorLightBlack"

        android:textSize="40sp" />

    <TextView

        android:id="@+id/textChooseInstru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textPartOne"

        android:layout_below="@+id/textPartOne"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center_horizontal"

        android:text="choisis un instrument"
        android:textColor="@color/colorLightBlack"

        android:textSize="15sp"
        android:textStyle="bold" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/scrollInstru"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/textChooseInstru"


        >

        <LinearLayout
            android:id="@+id/checkboxLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonBackPartOne"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/gloria_hallelujah"
        android:onClick="preView"
        android:text="@string/back"
        android:textSize="15sp" />

</android.widget.RelativeLayout>
