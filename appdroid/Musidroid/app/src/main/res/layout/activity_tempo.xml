<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tempoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    tools:context="com.musidroid.TempoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textSetTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gloria_hallelujah"
            android:gravity="start"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_margin"
            android:paddingTop="5dp"
            android:shadowColor="@color/colorLightBlack"
            android:shadowDx="5"

            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="Set Tempo"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textPartFour"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="-10sp"
            android:fontFamily="@font/gloria_hallelujah"
            android:text="New Partition"
            android:textColor="@color/colorLightBlack"

            android:textSize="40sp" />

        <TextView

            android:id="@+id/textChooseTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textPartFour"

            android:layout_below="@+id/textPartFour"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/gloria_hallelujah"
            android:gravity="center_horizontal"
            android:text="RÃ¨gle ton tempo"

            android:textColor="@color/colorLightBlack"
            android:textSize="15sp"

            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonBackPartFour"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gloria_hallelujah"
            android:onClick="preView"
            android:text="@string/back"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tempoEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="90"
            android:inputType="number"
            android:textAlignment="center"

            />


        <Button
            android:id="@+id/buttonNextPartThree"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/gloria_hallelujah"
            android:onClick="onClick"
            android:text=">>"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tempoEditText"
            android:text="Bpm" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>